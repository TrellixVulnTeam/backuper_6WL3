{
    "s3": {
        "region": "us-east-1",
        "key": "YOUR_KEY",
        "secret": "YOUR_SECRET",
        "bucket": "YOUR_BUCKET"
    },
    "applications": [
        {
            "name": "My App",
            "id": "myapp",
            "compression": {
                "type": "targz"    
            },
            "database": {
                "type": "mysql",
                "name": "myapp",
                "username": "root",
                "password": "",
                "host": "127.0.0.1",
                "port": "3306"
            },
            "filesystem": {
                "type": "local",
                "path": "/path/to/fs"
            },
            "shell": {
                "type": "system"
            },
            "storage": {
                "type": "s3"
            }
        }
    ],
    "logging": {
        "version": 1,
        "formatters": {
            "default": {
                "class": "logging.Formatter",
                "style": "{",
                "datefmt": "%d/%m/%Y %H:%M:%S",
                "format": "{levelname:8s} - [{asctime:s}][{name:<15s}] {message:s}"
            }
        },
        "handlers": {
            "console": {
                "class": "logging.StreamHandler",
                "formatter": "default",
                "level": "DEBUG"
            },
            "file_output": {
                "class": "logging.WatchedFileHandler",
                "formatter": "default",
                "filename": "backuper.log",
                "mode": "a",
                "encoding": "utf-8",
                "level": "INFO"
            }
        },
        "loggers": {},
        "root": {
            "handlers": ["console", "file_handler"],
            "level": "DEBUG"
        }
    },
    "tmp_dir": "/tmp/backuper"
}